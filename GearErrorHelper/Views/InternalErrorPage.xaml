<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icon="clr-namespace:GearErrorHelper"
             xmlns:resx="clr-namespace:GearErrorHelper.Resources.Strings"
			 xmlns:vm="clr-namespace:GearErrorHelper.ViewModels"
			 x:Class="GearErrorHelper.Views.InternalErrorPage"
			 x:DataType="vm:InternalErrorViewModel">
    
    <StackLayout Orientation="Horizontal">
        <Picker ItemsSource="{Binding ErrorTypes}" WidthRequest="100" HeightRequest="50" ItemDisplayBinding="{Binding Display}" SelectedItem="{Binding SelectedErrorType}"/>
        <SearchBar Text="{Binding ErrorSearch, Mode=TwoWay}" WidthRequest="300" HeightRequest="50" SearchCommand="{Binding ErrorSearchChangedCommand}"/>
    </StackLayout>
    
</ContentPage>
