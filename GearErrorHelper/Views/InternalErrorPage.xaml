<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GearErrorHelper.Views.InternalErrorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:icon="clr-namespace:GearErrorHelper"
    xmlns:resx="clr-namespace:GearErrorHelper.Resources.Strings"
    xmlns:vm="clr-namespace:GearErrorHelper.ViewModels"
    x:DataType="vm:InternalErrorViewModel">

    <StackLayout Margin="20" Orientation="Vertical">
        <StackLayout HorizontalOptions="Start" Orientation="Horizontal">
            <Picker
                Margin="10"
                ItemDisplayBinding="{Binding Value}"
                ItemsSource="{Binding ErrorTypes}"
                SelectedItem="{Binding SelectedErrorType}"
                WidthRequest="100" />
            <SearchBar
                Margin="10"
                SearchCommand="{Binding ErrorSearchChangedCommand}"
                Text="{Binding ErrorSearch, Mode=TwoWay}"
                WidthRequest="300" />
        </StackLayout>
        <StackLayout Margin="0,20,0,0" Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Margin="10" Text="{Binding ErrorTitle}" FontSize="Subtitle" FontAttributes="Bold"/>
                <Label Margin="10" Text="{Binding ErrorText}" FontSize="Subtitle" FontAttributes="Bold"/>
            </StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout
                    Grid.Column="0"
                    Margin="10"
                    Orientation="Vertical">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Subtitle"
                        Text="Description" />
                    <Label Text="{Binding ErrorDescription}" />
                </StackLayout>
                <StackLayout
                    Grid.Column="1"
                    Margin="10"
                    Orientation="Vertical">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Subtitle"
                        Text="Handling" />
                    <Label Text="{Binding ErrorHandling}" />
                </StackLayout>
            </Grid>
        </StackLayout>
    </StackLayout>

</ContentPage>
